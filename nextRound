cond =list((int(x) for x in input().split()))
n = int(cond[0])
k = int(cond[1])
# index refers to contestant, value refers to score
playerList = list((int(x) for x in input().split()))
advance = 0
for player in playerList:
	if player >= playerList[k-1] and player > 0:
		advance += 1
print(advance)

